/* pages/driver/checkin.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
}

.time-info {
  color: white;
}

.current-time {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.current-date {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
}

.user-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.status-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.status-success {
  color: #00b894;
}

.status-pending {
  color: #fdcb6e;
}

.status-icon {
  display: block;
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.status-text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-time,
.status-hint {
  display: block;
  font-size: 28rpx;
  opacity: 0.7;
}

.checkin-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.checkin-btn {
  width: 320rpx;
  height: 320rpx;
  background: white;
  border-radius: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  margin: 0 auto;
}

.checkin-btn.disabled {
  opacity: 0.6;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.checkin-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.checkin-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.rules-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 40rpx;
}

.rule-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  color: white;
}

.rule-item:last-child {
  margin-bottom: 0;
}

.rule-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.rule-text {
  font-size: 28rpx;
}