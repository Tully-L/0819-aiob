<!--pages/driver/profile.wxml-->
<view class="container">
  <view class="profile-card">
    <view class="avatar-section">
      <image class="avatar" src="/image/default-avatar.png" mode="aspectFill"></image>
      <text class="name">{{driverInfo.name || '未设置'}}</text>
      <text class="employee-id">工号: {{driverInfo.employeeId || '未设置'}}</text>
    </view>
    
    <view class="info-section">
      <view class="info-item">
        <text class="label">手机号码</text>
        <text class="value">{{driverInfo.phone || '未设置'}}</text>
      </view>
      <view class="info-item">
        <text class="label">注册时间</text>
        <text class="value">{{driverInfo.createdAt || '未知'}}</text>
      </view>
      <view class="info-item">
        <text class="label">账户状态</text>
        <text class="value status-{{driverInfo.status}}">
          {{driverInfo.status === 'active' ? '正常' : '停用'}}
        </text>
      </view>
    </view>
  </view>

  <view class="actions">
    <button class="action-btn" bindtap="logout">退出登录</button>
  </view>
</view>