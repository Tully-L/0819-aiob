<!--pages/auth/register.wxml-->
<view class="container">
  <view class="header">
    <image class="avatar" src="{{tempUserInfo.avatarUrl}}" mode="aspectFill"></image>
    <text class="welcome">欢迎加入车队管理系统</text>
    <text class="subtitle">请完善您的个人信息</text>
  </view>

  <view class="form-section">
    <view class="form-item">
      <text class="label">姓名</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入真实姓名"
        value="{{formData.name}}"
        bindinput="onNameInput"
        maxlength="20"
      />
    </view>

    <view class="form-item">
      <text class="label">工号</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入工号（3-20位字母数字）"
        value="{{formData.employeeId}}"
        bindinput="onEmployeeIdInput"
        maxlength="20"
      />
    </view>

    <view class="form-item">
      <text class="label">手机号</text>
      <input 
        class="input" 
        type="number" 
        placeholder="请输入手机号码"
        value="{{formData.phone}}"
        bindinput="onPhoneInput"
        maxlength="11"
      />
    </view>
  </view>

  <view class="button-section">
    <button 
      class="register-btn {{isSubmitting ? 'disabled' : ''}}" 
      bindtap="submitRegister"
      disabled="{{isSubmitting}}"
    >
      {{isSubmitting ? '注册中...' : '完成注册'}}
    </button>
    
    <button class="back-btn" bindtap="goBack">返回登录</button>
  </view>

  <view class="tips">
    <text class="tip-text">• 请确保信息真实有效</text>
    <text class="tip-text">• 工号将作为您的唯一标识</text>
    <text class="tip-text">• 手机号用于接收外呼通知</text>
  </view>
</view>