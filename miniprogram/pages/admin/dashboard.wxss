/* pages/admin/dashboard.wxss */
.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.stat-card.success {
  border-left: 8rpx solid #00b894;
}

.stat-card.warning {
  border-left: 8rpx solid #fdcb6e;
}

.stat-card.danger {
  border-left: 8rpx solid #e17055;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.driver-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.driver-item:last-child {
  border-bottom: none;
}

.driver-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.driver-id {
  font-size: 26rpx;
  color: #666;
}

.driver-phone {
  font-size: 26rpx;
  color: #666;
}

.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
}

.menu-item {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menu-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.menu-text {
  font-size: 26rpx;
  color: #333;
}

.empty {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}